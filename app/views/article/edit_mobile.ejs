<div class="panel panel-default">
  <div class="panel-heading">Edit article</div>
  <div class="panel-body">
	<% form_for("article", {controller: '/article', action: '/edit'}, function(f){ %>

		  <%- f.hidden_field("id") %>

		  
		    <div class="control-group">
		      <%- f.label_for("title", {class : "control-label"}) %>
		      <%- f.text_field("title", {class: "form-control"}) %>
		    </div>
		  
		    <div class="control-group">
		      <%- f.label_for("text", {class : "control-label"}) %>
		      <%- f.text_area("text", {class: "form-control"}) %>
		    </div>
		  

		  <%- f.submit("Edit", {class : 'btn btn-warning', style : "width:100%;"}) %>
	<% }) %>
  </div>
  <div class="panel-footer">
  	<%- link_to('back to list', '/account/articles', {class : 'btn btn-primary', style : "width:100%;"}) %> 
  </div>
</div>