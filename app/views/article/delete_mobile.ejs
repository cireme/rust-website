<div class="panel panel-default">
  <div class="panel-heading">delete article</div>
  <div class="panel-body">

    
        <label for="title">title:</label>
        <p><%- article.title %></p>
    
        <label for="text">text:</label>
        <p><%- article.text %></p>
    
        
  </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-xs-6 col-sm-6">
                <% form_for('article', {controller : '/article', action: '/delete'}, function(f){ %>
                    <%- f.hidden_field("id") %>
                    <p>
                        <%- f.submit("Delete", {class : 'btn btn-danger', style : "width:100%;"}) %>
                    </p>
                <% }) %>
            </div>
            <div class="col-xs-6 col-sm-6">
                <%- link_to('back to list', '/article', {class : 'btn btn-primary', style : "width:100%;"}) %> 
            </div>
        </div>
  </div>
</div>

