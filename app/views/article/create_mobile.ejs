<div class="panel panel-default">
  <div class="panel-heading">Create article</div>
  <div class="panel-body">
	<% form_for("article", {controller: '/article', action: '/create'}, function(f){ %>
		
		<%- f.hidden_field("id") %>

		
		  <div class="control-group">
		    <%- f.label_for("title", {class : "control-label"}) %>
		    <%- f.text_field("title", {class: "form-control"}) %>
		  </div>
		
		  <div class="control-group">
		    <%- f.label_for("text", {class : "control-label"}) %>
		    <%- f.text_area("text", {class: "form-control"}) %>
		  </div>
		

		<%- f.submit("Save", {class : 'btn btn-success', style : "width:100%;"}) %>
	<% }) %>
  </div>
    <div class="panel-footer">
  		<%- link_to('back to list', '/article', {class : 'btn btn-primary', style : "width:100%;"}) %> 
  	</div>
</div>