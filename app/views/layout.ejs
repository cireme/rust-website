<!DOCTYPE html>
<html>
  <head>
    <title>GhostRusters - The ultimate french rust server</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" type="text/css" href="/styles/application.css">
    <link rel="stylesheet" type="text/css" href="/styles/animate.css">
    <link rel="stylesheet" href="/styles/bootstrap.css" media="screen">

    <link rel="shortcut icon" href="/images/ghostrusters.ico" type="image/x-icon">
	<link rel="icon" href="/images/ghostrusters.ico" type="image/x-icon">
  </head>
  <body>

		<nav class="navbar navbar-default navbar-inverse navbar-static-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">
						<img id="logo" src="/images/ghostrusters.png">
					</a>
				</div>

				<div class="collapse navbar-collapse navbar-ex1-collapse">
				    <ul class="nav navbar-nav menu-top-left">
				    	<%- partial('shared/_menu') %>
				    </ul>
				    <ul class="nav navbar-nav navbar-right menu-top-right">
				      	<%- partial('shared/_login') %>
				    </ul>
				</div>
			</div>
		</nav>

		<div class="container">
			<div class="row">

				<% if(flash !== undefined && flash != ""){ %>
					<div class="alert alert-warning"><%- flash %></div>
				<% } %>

				<%- body %>
			</div>
		</div>

	    <script src="/scripts/vendors/jquery.js"></script>
	    <script src="/scripts/vendors/bootstrap.js"></script>
  </body>
</html>